###############################################################################
# Audio Control keys
###############################################################################

bindsym Shift+XF86AudioMute exec --no-startup-id $HOME/.local/bin/volctl info
bindsym XF86AudioMute exec --no-startup-id $HOME/.local/bin/volctl toggle-mute
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.local/bin/volctl decrease
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.local/bin/volctl increase
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
