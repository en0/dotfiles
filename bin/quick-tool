#!/bin/bash

if [ "--gui" == "$1" ]
then
    shift
    MENU="dmenu -p Tools: $@"
else
    MENU="fzf"
fi

PYTHON=python3

do-uuid() {
    $PYTHON -c 'import uuid; print(uuid.uuid4())' | \
        sed s/\n// | \
        xsel -ib
}

do-b64-encode() {
    xsel -ob | \
        base64 | \
        sed s/\n// | \
        xsel -ib
}

do-b64-decode() {
    xsel -ob | \
        base64 -d | \
        sed s/\n// | \
        xsel -ib
}

do-json-pp() {
    xsel -ob | \
        $PYTHON -m json.tool | \
        xsel -ib
}


declare -A SCRIPTS
SCRIPTS+=(
[uuid]="do-uuid"
[b64-encode]="do-b64-encode"
[b64-decode]="do-b64-decode"
[json-pp]="do-json-pp"
)

choice=$(printf "%s\n" "${!SCRIPTS[@]}" | $MENU)

[ $? = 0 ] && ${SCRIPTS[$choice]}
