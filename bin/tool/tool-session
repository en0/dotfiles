#!/bin/bash

### tool-session ##################################################################################
# A tool to manage your current window-manager session.
# Dependencies: dmenu
###################################################################################################

NAME="îœ² Session"

SEL=$(echo -e "Logout\nSuspend\nPoweroff\nRestart" | dmenu -i -p "${NAME}" $@)
[[ "$SEL" == "" ]] && exit
case "$SEL" in
    Logout)
        i3-msg exit ;;
    Suspend)
        systemctl suspend ;;
    Poweroff)
        systemctl poweroff ;;
    Restart)
        systemctl reboot ;;
esac
