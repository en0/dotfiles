#!/bin/bash

### tool-bsae64_decode ############################################################################
# A command-line utility to decode base64 that's in the clipboard.
# Dependencies: send-notify, xsel, base64 (core/coreutils)
###################################################################################################

source $(dirname $(readlink -e $0))/helpers

NAME="ó°¬‰ Base64 Decode"

ANS="$(xsel -o -b | base64 -d 2>/dev/null)"
[ ! $? -eq 0 ] && \
    notify-send -u critical -e "${NAME}" " That input didn't seem right.\nAbort!" && \
    exit 1
echo "$ANS" | xsel -i -b
notify-send -u low -e "${NAME}" " Success"
