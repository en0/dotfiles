#!/bin/bash

### tool-excuse ###################################################################################
# Fetch a programming excuse.
# Dependencies: curl, send-notify
###################################################################################################

source $(dirname $(readlink -e $0))/helpers

EXCUSE=$(curl http://programmingexcuses.com/ 2>/dev/null | grep -Po '([^<|>])+</a>')
notify-send "ó±€¥ Programming Excuse" "${EXCUSE}"
